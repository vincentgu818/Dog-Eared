<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Dog-Eared - Edit Book</title>
    <link href="https://fonts.googleapis.com/css?family=Arvo|Gravitas+One" rel="stylesheet">
    <link rel="stylesheet" href="/css/master.css">
  </head>
  <body>
    <form class="book-info" action="/books/<%=book.id%>?_method=PUT" method="POST">
      <fieldset>
        <legend>BOOK INFORMATION</legend>
        <label for="title">TITLE: </label>
        <input type="text" id="title" name="title" value="<%=book.title%>"><br>
        <label for="authors">AUTHORS: </label>
        <% let authors = ""
          for(let i=0; i<book.authors.length; i++) {
            if(i !== 0) authors += ', '
            authors += book.authors[i]
          } %>
        <input type="text" id="authors" name="authors" value="<%=authors%>"><br>
        <label for="categories">CATEGORIES: </label>
        <% let categories = ""
          for(let i=0; i<book.categories.length; i++) {
            if(i !== 0) categories += ', '
            categories += book.categories[i]
          } %>
        <input type="text" id="categories" name="categories" value="<%=categories%>"><br>
        <label for="img">IMAGE URL: </label>
        <input type="text" id="img" name="img" value="<%=book.img%>"><br>
        <div class="number_inputs">
          <div>
            <label for="price">PRICE: </label>
            <input type="number" id="price" name="price" value="<%=book.price%>">
          </div>
          <div>
            <label for="qty">QUANTITY: </label>
            <input type="number" id="qty" name="qty" value="<%=book.qty%>"><br>
          </div>
        </div>
        <label for="description">DESCRIPTION: </label><br>
        <textarea id="description" name="description"><%=book.description%></textarea><br>
        <input class="form_button" type="submit" value="SUBMIT CHANGES">
      </fieldset>
    </form>
  </body>
</html>
